<view class="container">
  <view class="user-info">
    <!-- 如果未登录，弹出登陆按钮 -->
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 点击登录 </button>
    <!-- 如果登陆了，显示头像等信息 -->
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
</view>
<block wx:if="{{hasUserInfo}}">
  <van-nav-bar title="全部活动" right-text="显示" bind:click-right="onClickRight" />
  <van-nav-bar title="消息中心" right-text="显示" bind:click-right="onClickRight" />
</block>